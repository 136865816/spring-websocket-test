<?xml version="1.0" encoding="UTF-8"?>
<configuration>
	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<layout class="ch.qos.logback.classic.PatternLayout">
			<Pattern>%d{HH:mm:ss} [%thread] %logger{0} - %msg%n</Pattern>
		</layout>
	</appender>

	<logger name="org.springframework.samples" level="DEBUG" />

	<logger name="org.springframework.web" level="DEBUG" />
	<logger name="org.springframework.websocket" level="TRACE" />

	<logger name="org.apache.tomcat.websocket" level="DEBUG" />

	<root level="info">
		<appender-ref ref="STDOUT" />
	</root>
</configuration>